@model ProductViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="card card-body my-3">
    <form asp-action="Index" method="get">
        <div class="container">
            <div class="row">
                <div class="col-md-11">
                    <select name="category" class="form-select" 
                        asp-items="@(new SelectList(Model.Categories, "CategoryId","Name",Model.SelectedCategory))">
                        <option value="0">Hepsi</option>
                    </select>
                </div>
                <div class="col-md-1">
                    <button class="btn btn-secondary" type="submit">Filtrele</button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="container text-center">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach(var prd in @Model.Products)
        {
            if(prd.IsActive == true)
            {
                <div class="col mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="~/img/@prd.Image" class="card-img-top" style="object-fit: cover; height: 300px;">
                        <div class="card-body">
                            <h5 class="card-title">@prd.Name</h5>
                            <p class="card-text text-muted">Sayfa: @prd.Pages</p>
                            <a href="#" class="btn btn-primary w-100">Satın Al</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

